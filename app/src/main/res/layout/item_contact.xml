<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_8dp"
    android:elevation="@dimen/dimen_8dp"
    android:padding="@dimen/dimen_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textSize="30sp"
            android:background="@drawable/rounded_textview"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/imgDisplayLetter"
            android:layout_marginEnd="@dimen/dimen_16dp"/>

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgDisplayLetter"
            android:textColor="@android:color/black"
            android:text="Sahil Doshi"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgDisplayLetter"
            android:layout_below="@id/tvFullName"
            android:text="+918000074479"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/btnMessage"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="@dimen/dimen_56dp"
            app:srcCompat="@drawable/ic_message_yellow_24dp"
            android:layout_toLeftOf="@id/btnCall"
            android:padding="@dimen/dimen_8dp"/>

        <ImageView
            android:id="@+id/btnCall"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="@dimen/dimen_56dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_call_yellow_24dp"
            android:contentDescription="@string/call_person" />

    </RelativeLayout>
</android.support.v7.widget.CardView>